# Use pnpm as the package manager
package-manager=pnpm@10.13.1

# Ensure consistent registry usage
registry=https://registry.npmjs.org/

# Allow optional dependencies for platform-specific binaries
# optional=false

# Don't install devDependencies in production
# production=true

# Use legacy peer deps to avoid conflicts
legacy-peer-deps=true

# Ensure strict SSL
strict-ssl=true

# Try to avoid problematic dependencies
prefer-offline=true

# Try to avoid problematic packages
ignore-scripts=true

# Try to avoid problematic packages
public-hoist-pattern[]=* 